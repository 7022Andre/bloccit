<h1>Sign Up Confirmation</h1>
<div class="row">
	<div class="col-md-8">
		<h3>Are you sure these values are correct?</h3>
		<h4><strong>Email:</strong> <%= params[:user][:email] %></h4>
		<h4><strong>Name:</strong> <%= params[:user][:name] %></h4>

		<div class="form-group">
			<div class="col-md-4">
			<%= button_to "Yes", {controller: "users", action: "create", params: params.to_unsafe_h}, class: 'btn btn-success' %>
			</div>
			<div class="col-md-4">
			<%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-default', method: :get %>
			</div>
		</div>
	</div>
</div>
